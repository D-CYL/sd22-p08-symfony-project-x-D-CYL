{% extends 'base.html.twig' %}

{% block title %}Create{% endblock %}

{% block body %}
    <h1>Fill In</h1>

    {{ form_errors(form) }}

    {{ form_start(form) }}

    <div class="row">
        {{ form_row(form.name) }}
        {{ form_row(form.image) }}
        {{ form_row(form.games) }}
        {{ form_row(form.submit) }}
        <p>Hold Ctrl when clicking to select more than one game</p>
    </div>

    {{ form_end(form) }}
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <div class="container">
        {% if "ROLE_USER" in app.user.roles %}
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="User"
                                 class="rounded-circle p-1 bg-primary" width="110">
                            <div class="mt-3">
                                <h4>{{ app.user.username }}</h4>
                            </div>
                        </div>
                    </div>
                    <div class="">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3"><h6>Username</h6></div>
                                <div class="col-sm-9 text-secondary">{{ app.user.username }}</div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3"><h6>Role</h6></div>
                                <div class="col-sm-9 text-secondary">{{ app.user.roles|join(', ') }}</div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    <a class="btn btn-warning" href="{{ path('user_edit', {'user': app.user.id}) }}">Edit</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <p>You are not logged in.</p>
        {% endif %}
    </div>
{% endblock %}

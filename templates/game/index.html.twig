{% extends 'base.html.twig' %}



{% block body %}
        {% for game in game %}

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="{{ game.image }}" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>{{ game.name }}</h5>
                        <p>Some representative placeholder content for the first slide.</p>
                        <a href="{{ path('app_game_info', {'game' : game.id}) }}" class="btn btn-primary">Go to game</a>
                        {% if app.user %}
                        {% if "ROLE_ADMIN" in app.user.roles %}
                            <a class="btn btn-warning" href="{{ path('game_edit', {'game' : game.id}) }}">Edit</a>
                            <a class="btn btn-danger" href="{{ path('game_delete', {'game' : game.id}) }}">Delete</a>
                        {% endif %}
                    </div>
                </div>
            </div>
{% endif %}
{% endfor %}
{% endblock %}